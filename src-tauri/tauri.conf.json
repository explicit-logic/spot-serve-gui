{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SpotServe",
  "version": "0.1.0",
  "identifier": "com.spot-serve-gui.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Spot Serve",
        "width": 800,
        "height": 600,
        "dragDropEnabled": true,
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "externalBin": [
      "binaries/cloudflared/cloudflared"
    ],
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMyOThEM0E1MzQ4MDkxQUIKUldTcmtZQTBwZE9Zd245bWczbjRhUlFhY1hXeHFJOURYcGNRVnFSSzU5aFNUMzZ0RTNyZnBYNC8K",
      "endpoints": [
        "https://github.com/explicit-logic/spot-serve-gui/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
